<div class="col-md-8 well">
  <%= form_for (@art_plan)  do |f| %>
    <%= render partial: 'layouts/errors', locals: {object: @art_plan} %>
    <h4><center>Create an art plan:</h4></center>

  <div class="center">
    <%= f.label :goal %>
    <%= f.select(:goal, ["Gallery", "Museum", "Price", "Finish by", "Critique"]) %>
  </div>

  <div class="center">
    <%= f.label :description %>
    <%= f.select(:description, ["Medium", "Politics", "Social Issues", "Ideas", "Identity", "References"]) %>
  </div>
  <br><br>
</div>


    <div class="col-md-8 well">
      <h4><center>Add your art schedule:</h4></center>
      <%= f.fields_for :art_schedule do |ms|%>

    <div class="center">
      <%= ms.label :eating_time %>
      <%= ms.select(:eating_time, ["Morning", "Afternoon", "Evening", "Night"]) %>
    </div>

    <div class="center">
      <%= ms.label :art_type %>
      <%= ms.select(:art_type, ["Painting", "Video", "Sculpture', "Performance", "Drawing"]) %>
    </div>
  </div>

      <div class="col-md-8 well">
        <h4><center>Add your art project:</h4></center>
        <%= ms.fields_for :art_project do |m|%>
          <%= m.label :medium %>
          <%= m.text_field :medium, placeholder: "Painting", required: true %>

          <%= m.label :idea %>
          <%= m.text_field :idea, placeholder: "Identity", required: true  %>

          <%= m.label :content %>
          <%= m.text_field :content, placeholder: "Social Issues", required: true  %>

          <%= m.label :artist_reference %>
          <%= m.text_field :artist_reference, placeholder: "Murakami", required: true  %>

          <%= m.label :price %>
          <%= m.number_field :price, placeholder: "$100,000", required: true  %>

          <%= m.label :day %>
          <%= m.date_field :day, required: true  %>

          <% end %>
      <% end %>

<div class="center">
  <%= f.submit %>
</div>
<% end %>
